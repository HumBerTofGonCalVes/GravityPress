<%- include("../../partials/header.ejs")%>

<%- include("../../partials/navbar.ejs")%>

<div class="container mt-2">
    <div class="card">
        <div class="card-header">
            <h2 class="mt-3">Edição de categoria:</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/update" class="mt-2">
                <input class="form-control" type="text" name="title" placeholder="Defina aqui o título da categoria"
                    value="<%= category.title %>">
                <br>
                <input type="hidden" name="id" value="<%= category.id%>">
                <button class="btn btn-success mt-1">Atualizar</button>
            </form>
        </div>
    </div>
</div>

